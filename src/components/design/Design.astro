---
import { portfolio } from "src/utils/portfolio";

import { Picture } from "astro-imagetools/components";

console.log(Picture);
const { design } = portfolio;
console.log(design);
---

<div class="max-w-7xl mx-auto">
	<h1 class="text-white text-3xl font-semibold">Alguno de mis dise√±os.</h1>
	<ul
		class="grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 overflow-hidden xl:gap-x-8"
	>
		{
			design.map((item, index) => (
				<a href="#" class="group">
					<div class="aspect-w-1 aspect-h-1 w-full overflow-hidden rounded-lg  xl:aspect-w-7 xl:aspect-h-8">
						<img
							src={item?.images[0]}
							alt="Tall slender porcelain bottle with natural clay textured body and cork stopper."
							class="h-full w-full object-cover object-center group-hover:opacity-75"
						/>
					</div>
					<h3 class="mt-4 font-medium text-sm text-gray-100">{item?.title}</h3>
					<p class="mt-1   text-gray-200">{item?.description}</p>
				</a>
			))
		}
	</ul>
</div>

<div id="animate-area"></div>

<style>
	@keyframes animatedBackground {
		from {
			background-position: 0 0;
		}
		50% {
			background-position: 50% 0;
		}
		to {
			background-position: 100% 0;
		}
	}

	#animate-area {
		width: 100vw;
		height: 400px;
		background-image: url("./img/design/horizontal.png");
		background-position: 0px 0px;
		background-repeat: repeat-x;
		animation: animatedBackground 40s linear infinite;
	}
</style>
